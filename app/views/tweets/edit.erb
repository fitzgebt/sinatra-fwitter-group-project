<% if logged_in? %>
<!-- %= @error %>-->

  <form action='/tweets/<%=@tweet.id%>' method="post">
    <input type="hidden" name="_method" value="PATCH">
    Content:
    <input type="text" name="content" value="<%=@tweet.content%>"><br>
    Create Your Tweet:

    <input type="submit" value="Edit Tweet" id="submit">

  </form>

  <% else %>
      <h1> You Must Be Logged in to Make Tweets </h1>
  <% end %>